<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/androidToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/violetDark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fill Form"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/alata"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/androidToolbar">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/userNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/alata"
            android:hint="Enter your name"
            android:inputType="text"
            android:lines="1"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alata"
            android:text="Mobile"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/userMobileET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/alata"
            android:hint="Enter your mobile number"
            android:inputType="number"
            android:lines="1"
            android:maxLength="10"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/location_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alata"
            android:padding="10dp"
            android:text="Turn on Location/लोकेशन ऑन करने के लिए क्लिक करे"
            android:textAllCaps="false"
            app:backgroundTint="@color/violetDark"
            app:cornerRadius="25dp" />

        <TextView
            android:id="@+id/userLocationET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/alata"
            android:hint="Your Location"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alata"
            android:text="Submit/दर्ज करिये"
            android:textAllCaps="false"
            app:backgroundTint="@color/violetDark"
            app:cornerRadius="25dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>